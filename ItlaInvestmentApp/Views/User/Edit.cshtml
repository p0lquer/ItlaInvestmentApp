@model UpdateUserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="col-12 col-md-6 offset-md-3 ">
    <div class="card">
        <div class="card-header bg-success text-light"><h5 class="text-center">Edit User - @Model.Name @Model.LastName </h5></div>
        <div class="card-body">
            <form asp-controller="User" asp-action="Edit" method="POST" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name:</label>
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="LastName" class="form-label">LastName:</label>
                    <input class="form-control" asp-for="LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email:</label>
                    <input class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">UserName:</label>
                    <input class="form-control" asp-for="UserName" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password:</label>
                    <input class="form-control" asp-for="Password" />                  
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm password:</label>
                    <input class="form-control" asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label">Phone:</label>
                    <input class="form-control" asp-for="Phone" />
                </div>
                <div class="mb-3">
                    <label asp-for="ProfileImageFile" class="form-label">Profile Image:</label>
                    <input class="form-control" asp-for="ProfileImageFile" />
                </div>
                <div class="mb-3">
                    <label asp-for="Role" class="form-label">Role:</label>
                    <select asp-for="Role" class="form-select">
                        <option value="0">Select any option</option>
                        <option value="1">Admin</option>
                        <option value="2">Investor</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <div>
                    <button type="submit" class="btn btn-outline-primary float-end"><i class="bi bi-floppy2"></i> Save</button>
                    <a asp-controller="User" asp-action="Index" class="btn btn-outline-warning float-end me-2"><i class="bi bi-arrow-left-short"></i> Back to list</a>
                </div>
            </form>
        </div>
    </div>
</div>
