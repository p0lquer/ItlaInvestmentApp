@model DeleteInvestmentAssetViewModel
@{   
    ViewData["Title"] = "remove asset from portfolio";
}

<div class="col-12 col-md-6 offset-md-3 ">
    <div class="card">
        <div class="card-header bg-danger text-light">
            <h4 class="text-center"> Are you sure want to remove the asset @Model.AssetName from the portfolio? </h4></div>
        <div class="card-body">
            <form asp-controller="InvestmentAsset" asp-action="Delete" method="POST">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="PortfolioId" />
                
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-danger me-2"><i class="bi bi-trash"></i> Delete</button>
                    <a asp-controller="InvestmentPortfolio" asp-action="AssetsDetails" asp-route-portfolioId="@Model.PortfolioId" class="btn btn-outline-warning"><i class="bi bi-arrow-left-short"></i>Back to list</a>
                </div>
            </form>
        </div>
    </div>
</div>
