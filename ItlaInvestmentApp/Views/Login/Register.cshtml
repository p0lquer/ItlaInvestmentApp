@model RegisterUserViewModel
@{   
    ViewData["Title"] = "Register User";
    Layout = "_LayoutAnonymous";
}

<div class="col-12 col-md-6 offset-md-3 ">
    <div class="card">
        <div class="card-header bg-success text-light"><h5 class="text-center">New User</h5></div>
        <div class="card-body">
            <form asp-controller="Login" asp-action="Register" method="POST" enctype="multipart/form-data">              
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name:</label>
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="LastName" class="form-label">LastName:</label>
                    <input class="form-control" asp-for="LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email:</label>
                    <input class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">UserName:</label>
                    <input class="form-control" asp-for="UserName" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password:</label>
                    <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm password:</label>
                    <input class="form-control" asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label">Phone:</label>
                    <input class="form-control" asp-for="Phone" />      
                </div>
                <div class="mb-3">
                    <label asp-for="ProfileImageFile" class="form-label">Profile Image:</label>
                    <input class="form-control" asp-for="ProfileImageFile" />
                    <span asp-validation-for="ProfileImageFile" class="text-danger"></span>
                </div>                
                <div>
                    <button type="submit" class="btn btn-outline-primary float-end"><i class="bi bi-floppy2"></i> Save</button>
                    <a asp-controller="Login" asp-action="Index" class="btn btn-outline-warning float-end me-2"><i class="bi bi-arrow-left-short"></i> Back to login</a>
                </div>
            </form>
        </div>
    </div>
</div>
